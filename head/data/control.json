{
  "_id"  : "control",
  "type" : "control_template",
  'body' : "

    <!--<div id='standardHeader'>
        <div data-role='header' data-position='fixed' data-theme='b'>
            <h1>nEDM Interface</h1>
            <a href='#login' data-rel='dialog' class='ui-btn-right'>Login</a>
        </div>
    </div> -->

<div data-role='page' id='db_control_{{db_name}}'>
    <div class='headerChild'> 
    </div>

    <!--<div class='headerKid'>
    </div>
    <script>$('headerKid').load('./index.html #standardHeader');</script> -->
    <div align='center' data-role='content' id='contentConfirmation' name='contentConfirmation'>
        <div class='content-primary'>
            <h1 >Control</h1>
            <div id='controlDiv_{{db_name}}'>
            </div>
        </div>
        <div class='content-secondary'>
            <div data-role='collapsible-set' class='listofdbs' data-inset='false'> 
            </div>
        </div> <!-- content-secondary -->
    </div>
    <script>
        function loadControls() {
            nedm.get_database().getView('nedm_default', 'controls', { opts : {stale : 'update_after', include_docs : true} }, function(err, objs) { 
                if ($('#controlDiv_{{db_name}}').children('div').size() != 0) $('#controlDiv_{{db_name}}').empty();
                if (err != null) return;
                for(var i=0;i<objs.rows.length;i++) {
                    var arr = objs.rows[i].doc;

                    var addr = '/nedm_head/_design/nedm_head/_show/define_control'; 
                    if (arr.template != undefined) {
                        addr += '/' + arr.template;
                    }
                    arr.db_control = 'db_control_{{db_name}}';
                    $.post(addr, JSON.stringify(arr), 
                      function(e) {
                        $('#controlDiv_{{db_name}}').append(e);
                        $('#controlDiv_{{db_name}}').trigger('create');
                        controlMade = true;
                    });
                }
            });
        }
        $('#db_control_{{db_name}}').on('pagebeforeshow', loadControls); 


    </script>

</div>


"
}
